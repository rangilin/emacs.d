<span class='nt'>&lt;input</span> <span class='na'>id=</span><span class='s'>&quot;Email&quot;</span> <span class='na'>name=</span><span class='s'>&quot;Email&quot;</span> <span class='na'>placeholder=</span><span class='s'>&quot;Email&quot;</span> <span class='na'>spellcheck=</span><span class='s'>&quot;false&quot;</span> <span class='na'>class=</span><span class='s'>&quot;&quot;</span> <span class='na'>type=</span><span class='s'>&quot;email&quot;</span><span class='nt'>&gt;</span>
