</span><span class='line'>  <span class="p">[</span> <span class="ss">type:</span> <span class="ss">:setext_underline_heading</span><span class="p">,</span> <span class="ss">level:</span> <span class="n">level</span> <span class="p">]</span>
</span><span class='line'>
</span><span class='line'><span class="no">true</span> <span class="o">-&gt;</span>
</span><span class='line'>  <span class="p">[</span> <span class="ss">type:</span> <span class="ss">:textline</span><span class="p">,</span> <span class="ss">text:</span> <span class="n">line</span> <span class="p">]</span>
